<Page
    x:Class="t2008m_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:t2008m_UWP"
    xmlns:models="using:t2008m_UWP.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <SplitView x:ConnectionId='2' x:Name="SP" OpenPaneLength="150" DisplayMode="CompactInline" IsPaneOpen="True">
        <SplitView.Pane>
            <RelativePanel Background="Brown">
                <FontIcon x:ConnectionId='3' x:Name="click"                          FontFamily="Segoe MDL2 Assets" Glyph="&#xE700;" Margin="12 20 20 20"/>
                <!--<Button x:Name="home" RelativePanel.Below="click" Background="Black" Content="Home" Click="HomePage" Margin="0 0 20 20"></Button>
                <Button RelativePanel.Below="home" Background="Black" Content="Info" Click="PersonInfo" Margin="0 0 20 20"></Button>-->
                <ListView x:ConnectionId='4'                      x:Name="Menu" Margin="0 10 0 0" RelativePanel.Below="click">
                    <ListView.ItemTemplate>
                        <DataTemplate                             >
                            <ListViewItem x:ConnectionId='6'                             >
                                <TextBlock x:ConnectionId='7'                      />
                            </ListViewItem>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </RelativePanel>
        </SplitView.Pane>
        <SplitView.Content>
            <ScrollViewer Margin="10">
                <Frame x:ConnectionId='8' x:Name="MainFrame"/>
            </ScrollViewer>
        </SplitView.Content>
    </SplitView>
    
    
